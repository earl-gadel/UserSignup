<h1>Add User</h1>

<form method="post">

    <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" name="username" id="username" type="text" value="@ViewBag.username" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" name="email" id="email" type="email" value="@ViewBag.email"/>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" name="password" id="password" type="password" />
        <span class="has-error">@ViewBag.errorPassword</span>
    </div>
    <div class="form-group">
        <label for="verify">Verify Password</label>
        <input class="form-control" name="verify" id="verify" type="password" />
        <span class="has-error">@ViewBag.errorVerify</span>
    </div>

    <input type="submit" value="Add User" />

</form>